<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="normal textview"
        android:textStyle="bold"
        android:padding="6dip"
        android:background="#e51c23"
        />

    <me.biubiubiu.justifytext.MyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f9bdbb"
        android:id="@+id/scroller"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.1"
            />

    </me.biubiubiu.justifytext.MyScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="justified textview"
        android:background="#259b24"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:padding="6dip"
        />

    <me.biubiubiu.justifytext.MyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#a3e9a4"
        android:id="@+id/justified_scroller"
        >

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/justified_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.1"
            />

    </me.biubiubiu.justifytext.MyScrollView>

</LinearLayout>
